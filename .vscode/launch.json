{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build", // Ensure the project is built before launch
            // Replace 'FilesApiBackend' with your actual project assembly name
            "program": "${workspaceFolder}/FilesApiBackend/bin/Debug/net9.0/FilesApiBackend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FilesApiBackend",
            "stopAtEntry": false,
            // The environment variables to use
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5072"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger", // Launch browser directly to the Swagger UI
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}/swagger"
                }
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}